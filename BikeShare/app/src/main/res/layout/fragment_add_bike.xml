<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="AddBikeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/addBike"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill in all fields below and click the 'ADD BIKE' button"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:layout_marginTop="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:id="@+id/add_bike_container"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bike name:"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"/>

                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price per hour:"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorWhite"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"/>

                <Button
                    android:id="@+id/decreasePriceButton"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:background="@color/colorRed"
                    android:text="-"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/increasePriceButton"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:background="@color/colorPrimaryDark"
                    android:text="+"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="5dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Picture:"
                        android:layout_margin="5dp"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"/>

                </LinearLayout>

                <Button
                    android:id="@+id/addPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:text="Add picture"
                    android:padding="5dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/addBike_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorYellow"
                android:text="Add Bike"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
